<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back_gr">


    <TextView
        android:background="@drawable/cuttom_so_cau"
        android:id="@+id/txtCauHoi"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Con có có mấy chân"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSoCauHoi"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/cuttom_so_cau"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/cuttom_dap_an"
        android:gravity="center"
        android:text="Đáp án 1"
        android:id="@+id/txtDapAn1"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDapAn3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/cuttom_dap_an"
        android:gravity="center"
        android:text="Đáp án 2"
        android:id="@+id/txtDapAn2"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDapAn4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="25dp"/>

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/cuttom_dap_an"
        android:gravity="center"
        android:text="Đáp án 3"
        android:layout_width="170dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/txtDapAn3"
        />

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/cuttom_dap_an"
        android:gravity="center"
        android:text="Đáp án 4"
        android:layout_width="170dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="25dp"
        android:id="@+id/txtDapAn4"
        />
    
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:id="@+id/txtThoiGian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="60"
        android:textStyle="bold"
        android:gravity="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>